.main_chat
  .main_chat__group-info
    .top-items
      .top-items__group-list
        .group-name
          = @group.name
        .group-member
          %ul.group-member__tytle
            Memberï¼š
            %li.group-member__list
              = @group.users.pluck(:name).join(",")
      .top-items__edit-btn
        %form
          %input{type: "submit" , class: 'submit-btn',value: 'Edit'}
  .main_chat__message-field
    =render @messages
    .message-info
      .message-info__name
      .message-info__time
    .message-content
  .main_chat__message-form
    = form_with model: [@group, @message], html: {class: "new__message"}, lobal: true do |f|
      .input-form
        = f.text_field :content, class: 'input-form__text', placeholder: 'type a message'
        = f.label :image, class: 'input-form__image' do
          = icon('fas','image')
          = f.file_field :image, class: 'input-form__image__file'
      = f.submit 'Send', class: 'output-btn'
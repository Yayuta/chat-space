.side_bar
  .side_bar__user-name
    .top-items
      .top-items__name 
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__edit
          = link_to new_group_path() do
            = icon('fas','edit')
        %li.top-items__icons__cog
          = link_to edit_user_path(current_user),class: 'cog' do
            = icon('fas','cog')
  .side_bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__text
            = group.show_last_message